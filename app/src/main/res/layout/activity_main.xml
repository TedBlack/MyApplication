<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@mipmap/jobapp"
    android:id="@+id/activity_main">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/happyText"
        android:textColor="@android:color/primary_text_dark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30dp"/>
    <ImageButton
        style="@android:style/Animation"
        android:background="@color/transparent"
        android:id = "@+id/events"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/group"
        android:layout_marginLeft="20dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/event"
        android:onClick="eventButton"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:layout_marginBottom="5dp"
        android:background="@color/transparent"
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/button_hist"
        android:src="@mipmap/history"
        android:scaleType="center"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/group"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
        android:id="@+id/group"
        android:gravity="center"
        android:layout_alignBottom="@+id/button"
        android:layout_alignTop="@+id/button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/group3"
        android:onClick="groupButton"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/seed"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/seed"
        android:layout_centerInParent="true"
        android:layout_above="@+id/group"
        android:background="@drawable/button"
        android:layout_marginBottom="5dp"
        android:onClick="seedButton"/>
</RelativeLayout>